<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/n7"
    tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"

       >

    <ImageView android:src="@drawable/shark12"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal" />


      <TextView
          android:layout_marginTop="30dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:textColor="#FAF7F7"
          android:text="L O G I N"
          android:textStyle="bold"
          android:textSize="40sp"
         android:background="#00000000"
          />

       <TextView
           android:layout_marginTop="40dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#FBFBFC"
           android:text="EMAIL ID"
           android:layout_marginLeft="20dp"
           android:textStyle="bold"
           android:textSize="15sp"
           />
       <EditText
           android:id="@+id/et1"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#FCF8F8"
           android:background="@drawable/shape"
           android:textColorHint="#FCF8F8"
           android:textColorHighlight="#FCF8F8"
           android:textSize="20sp"
           android:inputType="textEmailAddress"
       />
       <TextView
           android:layout_marginTop="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#FAFAFC"
           android:text="PASSWORD"
           android:layout_marginLeft="20dp"
           android:textStyle="bold"
           android:textSize="15sp"
           />
       <EditText
           android:id="@+id/et2"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#FCF8F8"
           android:background="@drawable/shape"
           android:textColorHint="#FCF8F8"
           android:textColorHighlight="#FCF8F8"
           android:textSize="20sp"
           android:inputType="textPassword"
           />
       <Button
           android:id="@+id/bt"
           android:layout_marginTop="20dp"
           android:layout_width="200dp"
           android:layout_height="60dp"
           android:layout_gravity="center"
           android:text="log in"

           />
       <Button
           android:id="@+id/slink"
           android:layout_marginTop="20dp"
           android:layout_width="200dp"
           android:layout_height="60dp"
           android:layout_gravity="center"
           android:text="sign up"

           />
      <TextView
          android:id="@+id/sl"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="No account yet? Create one"
          android:textColor="#FCF8F8"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"
          />


   </LinearLayout>
</ScrollView>

</LinearLayout>